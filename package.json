{
  "name": "osmlinter",
  "description": "Advanced OSM linter for node and browsers",
  "version": "0.1.0",
  "main": "osmlinter.js",
  "types": "index.d.ts",
  "module": "osmlinter.mjs",
  "jsnext:main": "osmlinter.mjs",
  "files": [
    "osmlinter.js",
    "osmlinter.mjs",
    "osmlinter.min.js"
  ],
  "scripts": {
    "prepublish": "rollup -c rollup.config.js",
    "lint": "standard",
    "docs": "npm run pretest && documentation readme osmlinter.js --shallow --section=API",
    "pretest": "rollup -f cjs -o osmlinter.js index.js && node ./scripts/convert-osm2geojson.js",
    "test": "tap validators/*/test.js --coverage",
    "bench": "node bench.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenTransportation/osmlinter.git"
  },
  "author": "Denis Carriere <@DenisCarriere>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenTransportation/osmlinter/issues"
  },
  "homepage": "https://github.com/OpenTransportation/osmlinter",
  "dependencies": {
    "@turf/helpers": "5.0.0-alpha",
    "@turf/invariant": "5.0.0-alpha",
    "@turf/meta": "5.0.0-alpha",
    "@turf/nearest-point-to-line": "^4.0.0",
    "@turf/point-on-line": "^4.7.3",
    "@turf/point-to-line-distance": "^4.7.3"
  },
  "devDependencies": {
    "@turf/circle": "^4.7.3",
    "@types/geojson": "*",
    "benchmark": "*",
    "documentation": "*",
    "glob": "*",
    "load-json-file": "*",
    "osm-and-geojson": "^0.1.2",
    "osmium": "*",
    "rollup": "*",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "*",
    "rollup-plugin-uglify": "*",
    "standard": "*",
    "tap": "*",
    "tape": "*",
    "typescript": "*",
    "underscore": "*",
    "write-json-file": "*",
    "xmldom": "^0.1.27"
  }
}

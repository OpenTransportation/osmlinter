{
  "name": "osmlinter",
  "description": "Advanced OSM linter for node and browsers",
  "version": "0.5.0",
  "main": "main",
  "module": "index",
  "jsnext:main": "index",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "main.js",
    "validators"
  ],
  "scripts": {
    "docs": "documentation readme index.js --section=API",
    "prepublish": "rollup -c rollup.config.js",
    "test": "tape -r @std/esm validators/*/test.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenTransportation/osmlinter.git"
  },
  "author": "Denis Carriere <@DenisCarriere>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenTransportation/osmlinter/issues"
  },
  "homepage": "https://github.com/OpenTransportation/osmlinter",
  "dependencies": {
    "@turf/helpers": "^5.0.0",
    "@turf/invariant": "^5.0.0",
    "@turf/meta": "^5.0.0",
    "@turf/point-on-line": "^5.0.3",
    "@turf/point-to-line-distance": "^5.0.0"
  },
  "devDependencies": {
    "@std/esm": "*",
    "@turf/circle": "*",
    "@turf/nearest-point-to-line": "*",
    "@turf/truncate": "*",
    "@types/geojson": "*",
    "documentation": "*",
    "glob": "*",
    "load-json-file": "*",
    "rollup": "*",
    "standard": "*",
    "tap": "*",
    "tape": "*",
    "typescript": "*",
    "write-json-file": "*"
  },
  "@std/esm": {
    "esm": "js",
    "cjs": true
  }
}

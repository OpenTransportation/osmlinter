{
  "name": "osmlinter",
  "description": "Advanced OSM linter for node and browsers",
  "version": "0.3.0",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
